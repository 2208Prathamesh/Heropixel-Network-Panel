<%- include('partials/header', {title: 'Dashboard - HeroPixel Network'}) %>

<div class="flex min-h-screen bg-gray-900">
    <%- include('partials/sidebar', {user: user, currentPage: 'dashboard'}) %>
    
    <!-- Main Content -->
    <div class="flex-1 lg:ml-64">
        <div class="p-8">
            <!-- Welcome Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-white mb-2">
                    Welcome back, <%= user.username %>!
                </h1>
                <p class="text-gray-400">
                    Role: <span class="text-blue-400 font-medium"><%= user.role %></span>
                </p>
            </div>

            <!-- Quick Stats -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
                    <div class="flex items-center">
                        <div class="p-2 bg-blue-500 bg-opacity-20 rounded-lg">
                            <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-400">Live Chat</p>
                            <p class="text-lg font-semibold text-white">Active</p>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
                    <div class="flex items-center">
                        <div class="p-2 bg-green-500 bg-opacity-20 rounded-lg">
                            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-400">File Storage</p>
                            <p class="text-lg font-semibold text-white">
                                <%= user.role === 'admin' ? 'Unlimited' : '5GB Quota' %>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
                    <div class="flex items-center">
                        <div class="p-2 bg-purple-500 bg-opacity-20 rounded-lg">
                            <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-400">Account Status</p>
                            <p class="text-lg font-semibold text-green-400">Verified</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <a href="/chat" class="block bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-blue-500 transition-colors group">
                    <div class="flex items-center mb-4">
                        <div class="p-3 bg-blue-500 bg-opacity-20 rounded-lg group-hover:bg-opacity-30 transition-colors">
                            <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                            </svg>
                        </div>
                    </div>
                    <h3 class="text-lg font-semibold text-white mb-2">Live Chat</h3>
                    <p class="text-gray-400 text-sm">Connect with other users in real-time chat</p>
                </a>

                <a href="/storage" class="block bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-green-500 transition-colors group">
                    <div class="flex items-center mb-4">
                        <div class="p-3 bg-green-500 bg-opacity-20 rounded-lg group-hover:bg-opacity-30 transition-colors">
                            <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                    </div>
                    <h3 class="text-lg font-semibold text-white mb-2">File Storage</h3>
                    <p class="text-gray-400 text-sm">Upload and manage your files with quota tracking</p>
                </a>

                <% if (user.role === 'admin') { %>
                <a href="/admin" class="block bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-purple-500 transition-colors group">
                    <div class="flex items-center mb-4">
                        <div class="p-3 bg-purple-500 bg-opacity-20 rounded-lg group-hover:bg-opacity-30 transition-colors">
                            <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <h3 class="text-lg font-semibold text-white mb-2">Admin Panel</h3>
                    <p class="text-gray-400 text-sm">Manage users, messages, and files</p>
                </a>
                <% } else { %>
                <div class="bg-gray-800 rounded-lg p-6 border border-gray-700 opacity-60">
                    <div class="flex items-center mb-4">
                        <div class="p-3 bg-gray-600 bg-opacity-20 rounded-lg">
                            <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                        </div>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-500 mb-2">Admin Panel</h3>
                    <p class="text-gray-500 text-sm">Admin access required</p>
                </div>
                <% } %>
            </div>

            <!-- Recent Activity Section -->
            <div class="mt-8 bg-gray-800 rounded-lg p-6 border border-gray-700">
                <h2 class="text-xl font-semibold text-white mb-4">Getting Started</h2>
                <div class="space-y-3">
                    <div class="flex items-center p-3 bg-gray-700 rounded-lg">
                        <div class="w-2 h-2 bg-green-400 rounded-full mr-3"></div>
                        <span class="text-gray-300">Account verified and ready to use</span>
                    </div>
                    <div class="flex items-center p-3 bg-gray-700 rounded-lg">
                        <div class="w-2 h-2 bg-blue-400 rounded-full mr-3"></div>
                        <span class="text-gray-300">Join the live chat to connect with other users</span>
                    </div>
                    <div class="flex items-center p-3 bg-gray-700 rounded-lg">
                        <div class="w-2 h-2 bg-purple-400 rounded-full mr-3"></div>
                        <span class="text-gray-300">Upload files to your personal storage space</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>