<!-- Mobile menu button -->
<div class="lg:hidden fixed top-4 left-4 z-50">
    <button onclick="toggleMobileMenu()" class="bg-blue-600 hover:bg-blue-700 text-white p-2 rounded-md">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
    </button>
</div>

<!-- Overlay for mobile -->
<div id="overlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden hidden"></div>

<!-- Sidebar -->
<nav id="sidebar" class="fixed top-0 left-0 z-50 w-64 h-full bg-gray-800 transform -translate-x-full lg:translate-x-0 sidebar-transition lg:static lg:z-auto">
    <div class="flex flex-col h-full">
        <!-- Logo/Brand -->
        <div class="flex items-center justify-center h-16 bg-gray-900 border-b border-gray-700">
            <h1 class="text-xl font-bold text-blue-400">HeroPixel Network</h1>
        </div>
        
        <!-- Navigation Links -->
        <div class="flex-1 px-4 py-6 space-y-2">
            <a href="/dashboard" class="flex items-center px-4 py-2 text-gray-300 rounded-lg hover:bg-gray-700 hover:text-white transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'bg-blue-600 text-white' : '' %>">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6a2 2 0 01-2 2H10a2 2 0 01-2-2V5z"></path>
                </svg>
                Dashboard
            </a>
            
            <a href="/chat" class="flex items-center px-4 py-2 text-gray-300 rounded-lg hover:bg-gray-700 hover:text-white transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'chat' ? 'bg-blue-600 text-white' : '' %>">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
                Live Chat
            </a>
            
            <a href="/storage" class="flex items-center px-4 py-2 text-gray-300 rounded-lg hover:bg-gray-700 hover:text-white transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'storage' ? 'bg-blue-600 text-white' : '' %>">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
                Storage
            </a>
            
            <% if (typeof user !== 'undefined' && user && user.role === 'admin') { %>
            <a href="/admin" class="flex items-center px-4 py-2 text-gray-300 rounded-lg hover:bg-gray-700 hover:text-white transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'admin' ? 'bg-blue-600 text-white' : '' %>">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Admin
            </a>
            <% } %>
        </div>
        
        <!-- User Info & Logout -->
        <div class="px-4 py-4 border-t border-gray-700">
            <% if (typeof user !== 'undefined' && user) { %>
            <div class="mb-3 px-4 py-2 bg-gray-700 rounded-lg">
                <p class="text-sm font-medium text-white"><%= user.username %></p>
                <p class="text-xs text-gray-400">Role: <%= user.role %></p>
            </div>
            <% } %>
            
            <a href="/logout" class="flex items-center px-4 py-2 text-red-400 rounded-lg hover:bg-red-900 hover:text-red-300 transition-colors">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
                Logout
            </a>
        </div>
    </div>
</nav>